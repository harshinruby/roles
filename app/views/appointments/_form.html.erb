<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>
<% daily_calendar @calendar[:date], Appointment.for_day(@calendar[:date]), verbose: @calendar[:verbose] do |c| %>
  <%= l(c.event.start_time, format: :short) %>
  <%= l(c.event.end_time, format: :short)%>
  <%= c.event.title%>
<% end %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
